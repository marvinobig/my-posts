<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <main>
      <nav>
        <h1><%= title %></h1>
        <p>Welcome to <%= title %></p>
        <a href="/new"><button>New Post</button></a>
      </nav>

      <div>
        <h2>Posts</h2>
        <div id="card-container">
          <% posts.forEach(function(post) { %>
          <div class="card">
            <p><%= post.text %></p>

            <div class="post-data">
              <p><b><%= post.user %></b>,</p>
              <p><%= post.added %></p>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <footer>
      <p>Marvin Obig</p>
      <p>
        <a href="https://github.com/marvinobig" target="_blank"
          ><button>Github</button></a
        >
      </p>
    </footer>
  </body>
</html>
